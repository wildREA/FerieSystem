{
    "name": "feriesystem/feriesystem",
    "description": "A PHP-based vacation request system",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "init-db": "php database/init.php",
        "reset-db": "php database/init.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
